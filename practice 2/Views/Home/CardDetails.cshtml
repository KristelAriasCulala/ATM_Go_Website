@model practice_2.Models.CardDetails

@{
    ViewData["Title"] = "Card Details";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #2c2c2c;
            color: white;
            font-family: Arial, sans-serif;
            font-size: 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }

        .btn-primary {
            background-color: red;
            border-color: red;
            width: 100%;
            margin-top: 8px;
            padding: 17px;
            font-size: 20px;
            margin-bottom: 5px;
        }

        .form-control {
            background-color: #444;
            color: white;
            border: 1px solid #555;
            padding: 10px;
            font-size: 20px;
        }

        .form-group {
            margin-bottom: 7px;
        }

        h1 {
            text-align: left;
            margin-bottom: 40px;
            font-size: 38px;
        }

        .form-label {
            display: block;
            margin-bottom: 7px;
            font-size: 19px;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
        }

            .form-row .form-group {
                flex: 1;
                margin-right: 10px;
            }

                .form-row .form-group:last-child {
                    margin-right: 0;
                }

        .card {
            overflow: hidden;
            position: relative;
            background-color: var(--primary);
            background-image: radial-gradient(circle at 100% 0%, hsla(0, 0%, 100%, 0.08) 29.5%, hsla(0, 0%, 100%, 0) 30%), radial-gradient(circle at 100% 0%, hsla(0, 0%, 100%, 0.08) 39.5%, hsla(0, 0%, 100%, 0) 40%), radial-gradient(circle at 100% 0%, hsla(0, 0%, 100%, 0.08) 49.5%, hsla(0, 0%, 100%, 0) 50%);
            border-radius: 0.5em;
            box-shadow: 0 0 0 hsl(0, 0%, 80%), 0 0 0 hsl(0, 0%, 100%), -0.2rem 0 0.75rem 0 hsla(0, 0%, 0%, 0.3);
            color: hsl(0, 0%, 100%);
            width: 25em;
            height: 15em;
            transform: translateX(100px) translateY(20px);
            margin-top: 112px;
        }

        .card__info,
        .card__chip-texture,
        .card__texture {
            position: absolute;
        }

        .card__chip-texture,
        .card__texture {
            top: 0;
            left: 0;
            width: 200%;
            height: 100%;
        }

        .card__info {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            padding: 0.75rem;
            inset: 0;
        }

        .btn-primary:hover {
            color: #fff;
            background-color: #000000;
            border-color: #000000;
        }

        .card__logo,
        .card__number {
            width: 100%;
        }

        .card__logo {
            font-weight: bold;
            font-style: italic;
            font-size: 20px;
        }

        .card__chip {
            background-image: linear-gradient(hsl(0,0%,70%),hsl(0,0%,80%));
            border-radius: 0.2rem;
            box-shadow: 0 0 0 0.05rem hsla(0,0%,0%,0.5) inset;
            width: 2.25rem;
            height: 2.25rem;
            transform: translate3d(0,0,0);
        }

        .card__chip-lines {
            width: 100%;
            height: auto;
        }

        .card__type {
            align-self: flex-end;
            margin-left: auto;
        }

        .card__digit-group,
        .card__exp-date,
        .card__name {
            background: linear-gradient(hsl(0,0%,100%),hsl(0,0%,85%) 15% 55%,hsl(0,0%,70%) 70%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-family: "Courier Prime", monospace;
            filter: drop-shadow(0 0.05rem hsla(0,0%,0%,0.3));
        }

        .card__number {
            font-size: 23px;
        }

        .card__valid-thru,
        .card__name {
            text-transform: uppercase;
        }

        .card__valid-thru,
        .card__exp-date {
            margin-bottom: 0.25rem;
            width: 50%;
        }

        .card__valid-thru {
            font-size: 9px;
            padding-right: 0.25rem;
        }

        .card__exp-date,
        .card__name {
            font-size: 0.6rem;
        }

        .card__exp-date {
            margin-left: -11rem;
            font-size: 14px;
        }

        .card__name {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            width: 13.25rem;
            font-size: 14px;
        }

        .card__vendor,
        .card__vendor:before,
        .card__vendor:after {
            position: absolute;
        }

        .card__vendor {
            right: 1.375rem;
            bottom: 1.375rem;
            width: 2.55rem;
            height: 1.5rem;
        }

            .card__vendor:before,
            .card__vendor:after {
                border-radius: 50%;
                content: "";
                display: block;
                top: 0;
                width: 1.5rem;
                height: 1.5rem;
            }

            .card__vendor:before {
                background-color: #e71d1a;
                left: 0;
            }

            .card__vendor:after {
                background-color: #fa5e03;
                box-shadow: -1.05rem 0 0 #f59d1a inset;
                right: 0;
            }

        .card__vendor-sr {
            clip: rect(1px,1px,1px,1px);
            overflow: hidden;
            position: absolute;
            width: 1px;
            height: 1px;
        }

        .card__texture {
            background-image: linear-gradient(-80deg,hsla(0,0%,100%,0.3) 25%,hsla(0,0%,100%,0) 45%);
        }

        .input-note {
            font-size: 14px;
            color: #aaa;
            margin-top: 3px;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            color: white;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.2);
            color: #ff6b6b;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.2);
            color: #75b798;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .alert-info {
            background-color: rgba(23, 162, 184, 0.2);
            color: #6edff6;
            border: 1px solid rgba(23, 162, 184, 0.3);
        }
    </style>
</head>
<body>
    <div class="container">
        <div>
            <h1>Card Details</h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <form asp-action="SaveCardDetails" method="post" id="cardDetailsForm">
                <div class="form-group">
                    <label asp-for="CardHolderName" class="form-label">Card Holder Name</label>
                    <input asp-for="CardHolderName" class="form-control" oninput="updateCardName(this.value)" required />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="example@email.com" required />
                </div>
                <div class="form-group">
                    <label asp-for="CardNumber" class="form-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control" placeholder="0000 0000 0000 0000" oninput="formatCardNumber(this); updateCardNumber(this.value)" maxlength="19" required />
                    <div class="input-note">Format: 0000 0000 0000 0000</div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                        <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" oninput="formatExpiryDate(this); updateCardExpiry(this.value)" maxlength="5" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="CVV" class="form-label">CVV</label>
                        <input asp-for="CVV" class="form-control" maxlength="3" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save Card</button>
            </form>
        </div>
        <div class="card">
            <div class="card__info">
                <div class="card__logo">MasterCard</div>
                <div class="card__chip">
                    <svg class="card__chip-lines" role="img" width="20px" height="20px" viewBox="0 0 100 100" aria-label="Chip">
                        <g opacity="0.8">
                            <polyline points="0,50 35,50" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="0,20 20,20 35,35" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="50,0 50,35" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="65,35 80,20 100,20" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="100,50 65,50" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="35,35 65,35 65,65 35,65 35,35" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="0,80 20,80 35,65" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="50,100 50,65" fill="none" stroke="#000" stroke-width="2"></polyline>
                            <polyline points="65,65 80,80 100,80" fill="none" stroke="#000" stroke-width="2"></polyline>
                        </g>
                    </svg>
                    <div class="card__chip-texture"></div>
                </div>
                <div class="card__type"></div>
                <div class="card__number" id="cardNumber">
                    <span class="card__digit-group">0000</span>
                    <span class="card__digit-group">0000</span>
                    <span class="card__digit-group">0000</span>
                    <span class="card__digit-group">0000</span>
                </div>
                <div class="card__valid-thru" aria-label="Valid thru">Valid<br>thru</div>
                <div class="card__exp-date" id="cardExpiry"><time datetime="2038-01">00/00</time></div>
                <div class="card__name" id="cardName" aria-label="Dee Stroyer">Card Holder Name</div>
                <div class="card__vendor" role="img" aria-labelledby="card-vendor">
                    <span id="card-vendor" class="card__vendor-sr">Mastercard</span>
                </div>
                <div class="card__texture"></div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function formatCardNumber(input) {
                // Remove any non-digit characters
                let value = input.value.replace(/\D/g, '');

                // Format with spaces after every 4 digits
                let formattedValue = '';
                for (let i = 0; i < value.length; i += 4) {
                    if (i > 0) formattedValue += ' ';
                    formattedValue += value.substring(i, Math.min(i + 4, value.length));
                }

                // Set the formatted value back to the input
                input.value = formattedValue;
            }

            function formatExpiryDate(input) {
                let value = input.value.replace(/\D/g, '');
                if (value.length > 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
                input.value = value;
            }

            function updateCardNumber(value) {
                const cardNumberElement = document.getElementById('cardNumber');

                // Clean the input value by removing all non-digits
                const cleanValue = value.replace(/\D/g, '');

                // For display on the card, format with spaces between every 4 digits
                const formattedValue = cleanValue.replace(/(.{4})/g, '$1 ').trim();

                // Update the card display - dynamically create spans for each digit group
                if (formattedValue) {
                    let groups = formattedValue.split(' ');
                    let html = '';
                    for (let i = 0; i < 4; i++) {
                        let group = i < groups.length ? groups[i] : '0000';
                        html += `<span class="card__digit-group">${group}</span>`;
                    }
                    cardNumberElement.innerHTML = html;
                } else {
                    cardNumberElement.innerHTML = `
                        <span class="card__digit-group">0000</span>
                        <span class="card__digit-group">0000</span>
                        <span class="card__digit-group">0000</span>
                        <span class="card__digit-group">0000</span>
                    `;
                }
            }

            function updateCardExpiry(value) {
                const cardExpiryElement = document.getElementById('cardExpiry');
                cardExpiryElement.innerHTML = value || '00/00';
            }

            function updateCardName(value) {
                const cardNameElement = document.getElementById('cardName');
                cardNameElement.innerHTML = value || 'Card Holder Name';
            }

            // Add event listener to form submission
            document.addEventListener('DOMContentLoaded', function() {
                // Check if form exists
                const form = document.getElementById('cardDetailsForm');
                if (form) {
                    form.addEventListener('submit', function(e) {
                        // Prepare card number for submission by removing spaces
                        const cardNumberInput = form.querySelector('input[name="CardNumber"]');
                        if (cardNumberInput) {
                            // Store the display value for validation
                            const displayValue = cardNumberInput.value;

                            // Validate required fields
                            const cardHolderName = form.querySelector('input[name="CardHolderName"]').value;
                            const email = form.querySelector('input[name="Email"]').value;
                            const expiryDate = form.querySelector('input[name="ExpiryDate"]').value;
                            const cvv = form.querySelector('input[name="CVV"]').value;

                            if (!cardHolderName || !email || !displayValue || !expiryDate || !cvv) {
                                e.preventDefault();
                                alert('Please fill in all required fields');
                                return false;
                            }

                            // Validate card number format (0000 0000 0000 0000)
                            const cardNumberRegex = /^\d{4} \d{4} \d{4} \d{4}$/;
                            if (!cardNumberRegex.test(displayValue)) {
                                e.preventDefault();
                                alert('Card number must be in the format 0000 0000 0000 0000');
                                return false;
                            }

                            // Validate CVV (3 digits)
                            const cvvRegex = /^\d{3}$/;
                            if (!cvvRegex.test(cvv)) {
                                e.preventDefault();
                                alert('CVV must be exactly 3 digits');
                                return false;
                            }

                            // Before submission, store the raw digits in a hidden field
                            // so the server gets the card number without spaces
                            const rawDigits = displayValue.replace(/\s/g, '');

                            // Create a hidden field with the cleaned number
                            const hiddenInput = document.createElement('input');
                            hiddenInput.type = 'hidden';
                            hiddenInput.name = 'RawCardNumber';
                            hiddenInput.value = rawDigits;
                            form.appendChild(hiddenInput);
                        }

                        // Form is valid, continue with submission
                        return true;
                    });
                }
            });
        </script>
    }
</body>
</html>